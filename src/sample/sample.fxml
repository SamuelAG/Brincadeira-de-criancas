<AnchorPane prefHeight="603.0" prefWidth="1033.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TableView fx:id="tblChildren" layoutX="14.0" layoutY="118.0" prefHeight="200.0" prefWidth="590.0">
