<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="389.0" prefWidth="648.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TableView fx:id="tblChildren" layoutX="27.0" layoutY="48.0" prefHeight="200.0" prefWidth="590.0">
      <columns>
          <TableColumn fx:id="idColumn" prefWidth="96.0" text="ID" />
          <TableColumn fx:id="ballColumn" prefWidth="98.0" text="BOLA" />
          <TableColumn fx:id="timePlayingColumn" prefWidth="198.0" text="Tempo de brincadeira" />
          <TableColumn fx:id="timeQuietColumn" prefWidth="197.0" text="Tempo quieta" />
      </columns>
    </TableView>
    <HBox layoutX="4.0" layoutY="248.0" prefHeight="74.0" prefWidth="641.0">
        <TextField fx:id="txtIdChild" prefHeight="25.0" prefWidth="149.0" promptText="ID da criança">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </HBox.margin>
        </TextField>
        <CheckBox fx:id="checkBoxBall" mnemonicParsing="false" prefHeight="17.0" prefWidth="53.0" text="Bola">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </HBox.margin>
        </CheckBox>
        <TextField fx:id="txtTimePlaying" promptText="Tempo de brincadeira">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </HBox.margin>
        </TextField>
        <TextField fx:id="txtTimeQuiet" promptText="Tempo quieta">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </HBox.margin>
        </TextField>
    </HBox>
    <Button layoutX="203.0" layoutY="328.0" mnemonicParsing="false" onAction="#addChild" text="Nova Criança" />
   <Button layoutX="382.0" layoutY="328.0" mnemonicParsing="false" onAction="#updateTableRealTime" text="update" />
   <Label fx:id="balls" layoutX="355.0" layoutY="21.0" prefWidth="0.0" />
   <Label layoutX="247.0" layoutY="21.0" text="Bolas no cesto:" />
</AnchorPane>
